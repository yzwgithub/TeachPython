# 绘制一个房子:逻辑思维
import turtle
turtle.penup()
turtle.goto(-200, -300)
turtle.pendown()
for i in range(4):
    turtle.forward(400)
    turtle.left(90)

turtle.penup()
turtle.goto(-200, 100)
turtle.pendown()

turtle.goto(0, 300)
turtle.goto(200, 100)

turtle.penup()
turtle.goto(-125, 0)
turtle.pendown()

for i in range(4):
    turtle.forward(50)
    turtle.right(90)

turtle.penup()
turtle.goto(-50, -300)
turtle.pendown()

for i in range(4):
    turtle.forward(100)
    turtle.left(90)

turtle.done()
